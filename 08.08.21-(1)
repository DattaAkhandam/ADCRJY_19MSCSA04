  
class Solution
{
    public int[] countBits(int n)
    
    {
        int[] arr=new int[n+1];
        arr[0]=0;
        int count=0;
        for(int i=1;i<n+1;i++)
        {
         if((i&(i-1))==0)
            {
                arr[i]=1;
                count=i;
            }
            else
            {
                arr[i]=arr[i-count]+1;
            }
        }
        return arr;
    }
}

