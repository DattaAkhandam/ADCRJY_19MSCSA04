import java.util.*;
public class Solution
{
    static int sumofdigit(int n)
    {
        if(n==0)
            return 0;
        return(n%10+sumofdigit(n/10));
    }
    public static void main(String args[])
    {
        int n=123;
        int result=sumofdigit(n);
        System.out.println("Sum of digits = "+ result);
    }
}
 
Output:
Sum of digits = 6
